@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/webrunes.css" rel="stylesheet">

    <link rel="shortcut icon" href="/Content/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/Content/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/Content/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/Content/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/Content/ico/apple-touch-icon-57-precomposed.png">

    <script src="/Scripts/jquery-1.8.2.min.js"></script>
    @*    <script src="/Scripts/angular.min.js"></script>*@
    <script src="/Scripts/angular.js"></script>
    <script src="/Scripts/angular-route.js"></script>
    
    <script src="/js/core/app.content.js"></script>
    <script src="/js/core/app.reader.js"></script>
    <script src="/js/core/app.article.js"></script>
</head>
    <body user=@ViewBag.user ng-controller="appCtrl">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="#"></a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li><a href="#"><i class="icon-tasks icon-white"></i></a></li>
                            <li class="active"><a href="#">Default</a></li>
                            <li><a href="#"><i class="icon-plus icon-white"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <header>
                <div class="subnav">
                    <ul class="nav nav-pills">
                        <li ng-repeat="subm in subms" ng-class="checkSubm(subm.name)" ng-click="onSubmClick(subm.name)"><a ng-href="#/{{subm.href}}">{{subm.name}}</a></li>
                        <li><a href="#" class="desktop-new"><i class="icon-plus"></i></a></li>
                    </ul>
                </div>
            </header>
            <div class="container-fluid">
                <ng-view></ng-view>
            </div>
            <footer class="footer">
                <div class="container">
                    <ul class="footer-links">
                        <li><a href="#">Support</a></li>
                        <li class="muted">·</li>
                        <li><a href="#">Terms</a></li>
                        <li class="muted">·</li>
                        <li><a href="#">Privacy</a></li>
                        <li class="pull-right copyright">&copy; 2013 webRunes</li>
                        <li class="muted pull-right">·</li>
                        <li class="pull-right"><a href="#">English</a></li>
                    </ul>
                </div>
            </footer>
        </div>
        <script src="/js/core/app.module.js"></script>
    </body>
</html>
